{
  "task": "swinir_sr_brain"     
  , "model": "plain"
  , "gpu_ids": [0,1,2]
  , "dist": true

  , "scale": 4
  , "n_channels": 1

  , "path": {
    "root": "/homes/gcasari/kair/work_data/kair/logs"
    , "pretrained_netG": null
    , "pretrained_netE": null
  }

  , "datasets": {
    "train": {
      "name": "train_dataset" 
      , "dataset_type": "plain"
      , "dataroot_H": "/homes/gcasari/bigbrain/work_data/crops_datasets/train/high"
      , "dataroot_L": "/homes/gcasari/bigbrain/work_data/crops_datasets/train/low"

      , "H_size": 512 
      , "dataloader_shuffle": true
      , "dataloader_num_workers": 8
      , "dataloader_batch_size": 12
    }
    , "test": {
      "name": "test_dataset"
      , "dataset_type": "plain"
      , "dataroot_H": "/homes/gcasari/bigbrain/work_data/crops_datasets/val1000/high"
      , "dataroot_L": "/homes/gcasari/bigbrain/work_data/crops_datasets/val1000/low"

    }
  }

  , "netG": {
    "net_type": "swinir" 
    , "upscale": 4
    , "in_chans": 1 
    , "img_size": 64
    , "window_size": 8  
    , "img_range": 1.0 
    , "depths": [6, 6, 6, 6, 6, 6] 
    , "embed_dim": 180 
    , "num_heads": [6, 6, 6, 6, 6, 6]
    , "mlp_ratio": 2 
    , "upsampler": "nearest+conv"
    , "resi_connection": "1conv"

    , "init_type": "default"
  }

  , "train": {
    "G_lossfn_type": "l1"
    , "G_lossfn_weight": 1.0

    , "E_decay": 0.999

    , "G_optimizer_type": "adam"
    , "G_optimizer_lr": 1e-4
    , "G_optimizer_wd": 0
    , "G_optimizer_clipgrad": null
    , "G_optimizer_reuse": true

    , "G_scheduler_type": "MultiStepLR"
    , "G_scheduler_milestones": [500000, 800000, 900000, 950000, 1000000]
    , "G_scheduler_gamma": 0.5

    , "G_regularizer_orthstep": null
    , "G_regularizer_clipstep": null

    , "G_param_strict": true
    , "E_param_strict": true

    , "checkpoint_test": 1000
    , "checkpoint_save": 5000
    , "checkpoint_print": 100
  }
}
